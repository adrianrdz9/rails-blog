.container
    %h2 Crear cuenta

    =form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

        =devise_error_messages!
        .row
            .form-group.col-xs-12
                .box
                    =f.email_field :email, autofocus: true, placeholder: "Email", required: true, class:"form-control"

            .form-group.col-xs-12.col-md-6
                .box
                    =f.text_field :first_name, placeholder: "Nombre (opcional)", class:"form-control"

            .form-group.col-xs-12.col-md-6
                .box
                    =f.text_field :last_name, placeholder: "Apellido (opcional)", class:"form-control"

            .form-group.col-xs-12.col-md-6
                .box
                    =f.password_field :password, placeholder: "Contraseña", class:"form-control"


            .form-group.col-xs-12.col-md-6
                .box
                    =f.password_field :password_confirmation, placeholder: "Verificar contraseña", class:"form-control"

            .col-xs-12.center-xs
                .box
                    =f.submit "Registrarse", class:"btn btn-success"
            .col-xs-12.center-xs
                .box
                    =render "devise/shared/links"
